{
  "name": "vscode-tester",
  "displayName": "Tester Language Support by Linhanmic",
  "description": "Tester Language Support by Linhanmic",
  "author": "Linhanmic",
  "icon": "icons/icon.png",
  "contributors": [
    {
      "name": "Linhanmic",
      "email": "lihanmic@qq.com"
    }
  ],
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "Linhanmic",
  "repository": {
    "type": "git",
    "url": "https://github.com/Linhanmic/vscode-tester"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets",
    "Formatters"
  ],
  "keywords": [
    "tester",
    "autocompletion",
    "validation"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-tester.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "tester",
        "aliases": [
          "Tester",
          "tester"
        ],
        "extensions": [
          ".txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tester",
        "scopeName": "source.tester",
        "path": "./syntaxes/tester.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "tester",
        "path": "./snippets/tester.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
